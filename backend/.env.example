# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret - use a secure random string
JWT_SECRET=your_jwt_secret_key_here

# Server port
PORT=8080

# Frontend URL for CORS (set to your Vercel deployment URL)
FRONTEND_URL=https://your-app.vercel.app

# Email Configuration (for inquiry notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your_app_password

# Admin email to receive inquiry notifications
ADMIN_EMAIL=admin@example.com

# WhatsApp number (without + sign)
WHATSAPP_NUMBER=1234567890
