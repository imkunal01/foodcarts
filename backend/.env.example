NODE_ENV=development

# Server port (Render sets this; keep for local)
PORT=8080

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret - use a secure random string
JWT_SECRET=your_jwt_secret_key_here

# CORS
# Primary frontend origin (Vercel URL in production)
FRONTEND_URL=http://localhost:5173
# Optional additional allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration (for inquiry notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your_app_password

# Admin email to receive inquiry notifications
ADMIN_EMAIL=admin@example.com

# WhatsApp number (without + sign)
WHATSAPP_NUMBER=1234567890
